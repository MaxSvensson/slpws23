doctype html
html
  head
    title = "#{@user['username']}s profil"
    link rel="stylesheet" href="/css/index.css"
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  body
    h1 = "#{@user['username']}s profil"

    h2 = "#{@user['username']} quizer"
  - if @quizzes.empty?
      p Det finns inga quizer Ã¤n
  - else
      div.cards
        - @quizzes.each do |quiz|
          div.card
            form.like-form action="/app/quiz/like/toggle/#{quiz['id']}" method="post"                
              - if quiz['is_liked']
                  button.like-button type="submit" 
                    i.fa.fa-thumbs-up
              - else
                  button.like-button type="submit" 
                    i.fa.fa-thumbs-o-up
            h2= quiz['title']
            p= quiz['description']
            p = "Anatal likes " + quiz["likes"].to_s
            div.actions
              a href="/app/quiz/play/#{quiz['id']}" Ta quiz
                

